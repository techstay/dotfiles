[rebase]
    autosquash = true
[fetch]
    prune = true
[i18n]
    filesEncoding = utf-8
[rerere]
    enabled = true  
[alias]
    up = pull --rebase
    wu = log --reverse --stat @{upstream}..HEAD
    wup = log --reverse --stat -p @{upstream}..HEAD
	l = log --oneline --decorate --all --graph
[pull]
	ff = only
[tag]
	gpgsign = true
[submodule]
	recurse = true
[help]
	autocorrect = 30
